{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "lib": ["es2022"],
        "module": "node16",
        "moduleDetection": "legacy",
        "moduleResolution": "node16",
        "outDir": "./.vscode/ts",
        "resolveJsonModule": true,
        "target": "es2022"
    },
    "include": [
        "**/*.d.ts",
        "**/*.js"
    ]
}
